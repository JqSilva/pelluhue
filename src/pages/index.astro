---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Inicio | Caba単as Pelluhue">
  
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-slate-900">
    
    <div class="absolute inset-0 z-0">
        <img 
            src="/img/caba単a.png" 
            class="w-full h-full object-cover opacity-60" 
            alt="Vista de Caba単as Pelluhue" 
        />
        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 via-slate-900/50 to-slate-900/30"></div>
    </div>

    <div class="relative z-10 max-w-5xl mx-auto px-6 text-center">
      
      <h1 class="text-6xl md:text-7xl font-bold text-white mb-2 tracking-tight drop-shadow-lg">
        Caba単as Pelluhue
