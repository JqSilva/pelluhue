---
import Layout from '../layouts/Layout.astro';
import { ANIO } from '../config';
---

<Layout title="Inicio | Cabañas Pelluhue">
  
  <section class="relative min-h-screen flex items-center bg-slate-900 overflow-hidden">
    
    <div class="absolute inset-0 z-0">
        <img 
            src="/img/pelluhue-bg.jpg" 
            class="w-full h-full object-cover opacity-60" 
            alt="Cabañas Pelluhue" 
        />
        <div class="absolute inset-0 bg-gradient-to-r from-slate-900/90 via-slate-900/40 to-transparent"></div>
    </div>
    
    <div class="relative z-10 w-full max-w-7xl mx-auto px-6 md:px-12 flex flex-col items-start justify-center h-full">
        
        <h1 class="titulo-impacto flex flex-col items-start leading-none select-none">
            <span class="text-white">CABAÑAS</span>
            <span class="text-white -mt-2 md:-mt-4">PELLUHUE</span> <span class="text-transparent stroke-text mt-2 opacity-80">
                {ANIO}
            </span>
        </h1>
        
        <div class="mt-10 flex flex-wrap gap-4">
            
            <a href="/cuotas" 
               class="px-8 py-3 bg-amber-500 text-black font-bold rounded-full hover:bg-amber-400 transition-all transform hover:scale-105 active:scale-95 shadow-lg shadow-amber-500/20">
               Ver Cuotas
            </a>

            <a href="/gastos" 
               class="px-8 py-3 bg-[#2D7FB0] text-[#17253E] text-slate-900 font-bold rounded-full hover:bg-cyan-300 transition-all transform hover:scale-105 active:scale-95 shadow-lg shadow-cyan-400/20">
               Ver Gastos
            </a>

        </div>

    </div>

  </section>
</Layout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Anton&display=swap');

    .titulo-impacto {
        font-family: 'Anton', sans-serif;
        text-transform: uppercase;
        
        /* TAMAÑO GIGANTE MEJORADO */
        font-size: clamp(80px, 15vw, 160px); 
        /* clamp(minimo, ideal, maximo) hace que sea responsivo automáticamente */
        
        letter-spacing: 2px;
        filter: drop-shadow(0 10px 20px rgba(0,0,0,0.5));
    }

    /* Clase especial para el efecto de borde del año */
    .stroke-text {
        -webkit-text-stroke: 2px rgba(255, 255, 255, 0.5);
    }
</style>